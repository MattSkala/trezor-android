<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item> -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <!-- DIALOGS -->

    <style name="SDL"/>

    <style name="SDL.DialogBase" parent="android:Theme.Light"/>

    <style name="SDL.Dialog" parent="SDL.DialogBase">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--item name="android:windowBackground">@drawable/dialog_bg</item-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="SDL.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dialog_title_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/sdl__text_hor_padding</item>
        <item name="android:paddingRight">@dimen/sdl__text_hor_padding</item>
        <item name="android:paddingTop">@dimen/sdl__title_top_padding</item>
        <item name="android:paddingBottom">@dimen/sdl__title_bottom_padding</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <!--item name="android:fontFamily">@string/font_medium</item-->
    </style>

    <style name="SDL.Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dialog_message_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:paddingTop">@dimen/sdl__text_top_padding_small</item>
        <item name="android:paddingBottom">@dimen/sdl__text_bottom_padding_small</item>
        <item name="android:paddingLeft">@dimen/sdl__text_hor_padding</item>
        <item name="android:paddingRight">@dimen/sdl__text_hor_padding</item>
        <item name="android:maxLines">200</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SDL.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <!--item name="android:textColor">@color/dialog_button_text_primary</item-->
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingTop">@dimen/sdl__text_top_padding_small</item>
        <item name="android:paddingBottom">@dimen/sdl__text_bottom_padding_small</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <!--item name="android:fontFamily" tools:ignore="NewApi">@string/font_medium</item-->
        <!--item name="android:textAllCaps" tools:ignore="NewApi">true</item-->
        <!--item name="android:background">@drawable/dialog_button</item-->
    </style>

    <style name="ButtonAppTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ButtonAppTheme.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAppTheme.Secondary" >
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ButtonAppTheme.Pin" parent="@style/ButtonAppTheme.Secondary">
        <item name="android:layout_width">@dimen/btn_pin_width</item>
        <item name="android:layout_height">@dimen/btn_pin_height</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@drawable/circle_pin_num</item>
    </style>
</resources>
